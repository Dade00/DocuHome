<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:background="@drawable/strockeimg"
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:text="@string/titolare"
                android:background="@drawable/roundedtviews"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/dynamictitolare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:gravity="center"
                android:background="@drawable/roundedtviews2"
                android:text="@string/test"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/staticLabel"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:background="@drawable/roundedtviews"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserratregular"
                android:text="@string/DocType"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/docTypeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedtviews2"
                android:fontFamily="@font/montserratregular"
                android:text="@string/test"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/staticExpDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:background="@drawable/roundedtviews"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserratregular"
                android:text="@string/Exp_date"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/expDatevar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/roundedtviews2"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserratregular"
                android:text="@string/test"
                android:textSize="8pt" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>